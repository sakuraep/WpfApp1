<Window Closed="Window_Closed" x:Class="WpfApp1.View.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="AdminPanel" Height="450" Width="800">
    <Grid>
        <Label Style="{StaticResource LabelStyle1}" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40">Панель администратора</Label>
        <StackPanel VerticalAlignment="Center">

            <Button Style="{StaticResource ButtonStyle}" Name="ViewButton" Click="ViewButton_Click">
                <Label Style="{StaticResource LabelStyle1 }" HorizontalAlignment="Center">Посмотреть список товаров</Label>
            </Button>
            
            <Button Style="{StaticResource ButtonStyle}" Name="AddButton" Click="AddButton_Click">
                <Label Style="{StaticResource LabelStyle1 }" HorizontalAlignment="Center">Добавить товар</Label>
            </Button>
        </StackPanel>
    </Grid>
</Window>
